//- Edit Number Modal
#modalEditNumber.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#myModalLabel.modal-title Edit Phone Number
      .modal-body
        .row
          .col-sm-6
            .well.text-center
              h5 Number:
              h3.text-green (212) 456-7890
          .col-sm-6
            .well.text-center
              h5 Location:
              h3.text-green New York, NY
        form
          .form-group
            label Phone Number
            input(class="form-control" type="text" placeholder="Phone Number" value="(212) 456-7890")
          .row
            .col-sm-6
              .form-group
                label Callback ID
                input(class="form-control" type="text" placeholder="Callback ID")
            .col-sm-6
              .form-group
                label Fallback ID
                input(class="form-control" type="text" placeholder="Fallback ID")

          .well.danger
            h3 Release Number
            p Warning text that explains what releasing a number means
            a(href="#").btn.btn-danger Release Number


      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button') Save changes