//- Add Users Modal
#modalAddUsers.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#myModalLabel.modal-title Add New User
      .modal-body
        form
          .row
            .col-sm-6
              .form-group
                label New User's Email
                input(type='email', placeholder='Email', class='form-control')
            .col-sm-6
              .form-group
                label Sub-Account Type
                select.form-control
                  option None
                  option Type Option
          .row
            .col-sm-12 
              input(type="radio" id="administrator")
              label(for="administrator") Administrator  - Can access all features including inviting users and creating sub-accounts.
            .col-sm-12
              input(type="radio" id="user")
              label(for="user") User - Full access to APIs, but can not edit users or accounts
      .modal-footer
        a.btn.btn-primary Send Invitation
        a.btn.btn-default Cancel
        

