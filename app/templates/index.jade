block nav-sms
  li.active: a(href='/') SMS/MMS

block header-title
  h1 SMS & MMS
block header-button

block content
  .row
    .col-sm-5
      .credentials.account
        label Account
        div: code 123456789
      .credentials.apikey
        label API Key
        div: code ef46ceff50ea5d0210e3d478a88e35d4
    .col-sm-7
      .col-sm-6
        a(href="/numbers", class="sms-link link-numbers")
          h4 Phone Numbers
          p Buy and manage more phone numbers here
      .col-sm-6
        a(href="/help", class="sms-link link-help")
          h4 Need Help?
          p Browse our Help Section and Documentation
  
  ul.nav.nav-tabs(role='tablist')
    li.active(role='presentation')
      a(href='#usage', aria-controls='usage', role='tab', data-toggle='tab') Usage
    li(role='presentation')
