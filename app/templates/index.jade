            .col-sm-4
              .form-group
                label Search
                input(type="text", class="form-control", placeholder="eg: 123456")
            .col-sm-2
              .form-group
                label Start Time
                input(type="text", class="form-control", placeholder="12/31/16")
            .col-sm-2
              .form-group
                label End Time
                input(type="text", class="form-control", placeholder="12/31/16")
            .col-sm-2
              .form-group
                label Sent/Received
                select.form-control
                  option Sent
                  option Received
            .col-sm-2
              .form-group.form-button
                button.btn.btn-primary.btn-block Search
